
<div class="box">
    <div class="box-header with-border">
        <h3 class="box-title">Orden # {{ poll._id }}</h3>

        <div class="box-tools pull-right">
            <button type="button" class="btn btn-box-tool" data-widget="collapse" data-toggle="tooltip" title="" data-original-title="Collapse">
                <i class="fa fa-minus"></i>
            </button>
            <button type="button" class="btn btn-box-tool" data-widget="remove" data-toggle="tooltip" title="" data-original-title="Remove">
                <i class="fa fa-times"></i>
            </button>
        </div>
    </div>
    <!-- /.col -->
    <div class="box-body">
        <div id="divPollServices">
            <div class="col-sm-12">

                <div class="col-xs-12 table-responsive" id="PedidoTB">
                    <table class="table table-striped">
                        <thead>
                            <tr>

                                <th><h3 class="titulo">Codigo</h3></th>
                                <th><h3 class="titulo">Descripcion</h3></th>
                                <th><h3 class="titulo">Cant.</h3></th>
                                <th><h3 class="titulo">P.Unit</h3></th>
                                <th><h3 class="titulo">Pronto Pago.</h3></th>
                                <th><h3 class="titulo">Descuento.</h3></th>
                                <th><h3 class="titulo">Subtotal</h3></th>
                                <th><h3 class="titulo">Forma_Pago</h3></th>
                                <th><h3 class="titulo">Unidad</h3></th>
                                <th><h3 class="titulo">Num. Factura</h3></th>
                            </tr>
                        </thead>
                        <tbody>
                            <tr v-for="(detalle, index) in poll.PedidosItems">
                                <td class="codigo">  {{detalle.idArticulo}}</td>
                                <td class="descripcion">{{detalle.articulos.descripcion}}</td>
                                <td class="cantidad izq">{{detalle.cantidad}}</td>
                                <td class="precio izq">{{detalle.importeUnitario}}</td>
                                <td class="descuento izq">{{detalle.ppago}}</td>
                                <td class="descuento izq">{{detalle.nespecial}}</td>
                                <td class="subtotal izq">{{detalle.total}}</td>
                                <td class="subtotal izq" v-if="idtaskstaus!='d0723711-b3ab-4736-bfa9-18e0d4a9824c'">{{detalle.FormaPago}}</td>
                                <td class="subtotal izq" v-if="idtaskstaus=='d0723711-b3ab-4736-bfa9-18e0d4a9824c'">
                                    <select id="selStatusTask" v-model="detalle.FormaPago" class="form-control input-sm">
                                        <option value="Contado   ">Contado</option>
                                        <option value="Credito   ">Credito</option>
                                    </select>
                                </td>
                                <td class="subtotal izq">{{detalle.unidad}}</td>
                                <td class="">
                                    <input v-info cclass="datosfac" style="  width: 100px;
                                        height: 25px;
                                    margin: 0px !important;
                                    text-align: center;
                                    border-radius: 3px; font-weight: 700;" v-bind:id="detalle._id" v-model="detalle.numero_factura" />
                                </td>
                            </tr>
                        </tbody>
                    </table>


                </div>
                <div class="col-lg-offset-7 col-lg-5">
                    <p class="lead">Detalle Pedidos </p>
                    <div class="table-responsive">
                        <table class="table">
                            <tr>
                                <th style="width:50%">Subtotal:</th>
                                <td>{{ subtotales(poll._id) }}</td>
                            </tr>
                            <tr>
                                <th>Iva (12%)</th>
                                <td>{{ IVA(poll._id) }}</td>
                            </tr>
                            <tr>
                                <th>Total:</th>
                                <td>{{ total(poll._id) }}</td>
                            </tr>
                        </table>
                    </div>
                </div>
            </div>

        </div>

    </div>
    <div class="box-footer">
        <div class="col-sm-2">
            <select id="selStatusTask" v-model="poll.IdStatusTask" class="form-control input-sm"
                    asp-items="ViewBag.StatusList"></select>
        </div>
        <div class="col-sm-8">
            <input type="text" id="selStatusTask" v-model="poll.comment" class="form-control" />
          </div>
        <div class="pull-right">


            <a href="@Url.Action("MyTasks", "Task")" class="btn btn-info btn-flat" id="btnCancelar" style="min-width: 100px;">
                <i class="clip-exit"></i> Salir
            </a>
            <a href="#" class="btn  btn-primary btn-flat" id="btnguardar" onclick="saveinfo()">
                <i class="fa fa-save"></i> Guardar
            </a>
        </div>


    </div>

