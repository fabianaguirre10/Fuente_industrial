@{
    @model string
}
<div class="sb-slidebar sb-right" id="divFilter">
    <div class="headerFilter">
        <b>Filtros de Búsqueda</b>
    </div>
    <div class="mainbodyFilter">
        <div>
            <div>
                <div class="errorHandler alert alert-danger no-display" id="divError">
                    <i class="fa fa-times-sign"></i> Tiene errores, por favor reviselos
                </div>
            </div>
            <div class="form-group">
                <input type="hidden" id="hidIdFilterExecution" value="@Model" />
            </div>
            <div class="form-group" id="divFilterTable">
                <label class="control-label" for="selFilterTable">Tipos de Filtro</label>
                <select class="form-control" id="selFilterTable" data-bind="options: FilterViewModel.ItemFilter,
                                                                                optionsText: 'Name',optionsValue: 'Id',
                                                                                value:FilterViewModel.IdFilterTable"></select>
            </div>
            <div class="form-group" id="divFilterField">
                <label class="control-label" for="selFilterField">Campos</label>
                <select class="form-control" id="selFilterField"
                        data-bind="options: FilterViewModel.ItemsFields,
                                       optionsText: 'Name',
                                       optionsValue: 'Id',
                                       value:FilterViewModel.IdFilterField"></select>
            </div>
            <div class="form-group" id="divFilterOperator">
                <label class="control-label" for="selFilterOperator">Operador</label>
                <select class="form-control" id="selFilterOperator"
                        data-bind="options:  FilterViewModel.ItemsOperators,
                                       optionsText: 'Name',
                                       optionsValue: 'Id',
                                       value:FilterViewModel.IdFilterCriteria"></select>
            </div>
            <div class="form-group" id="divFilterValue">
                <label class="control-label" for="txtFilterValue">Valor</label>
                <input type="text" class="form-control" id="txtFilterValue"
                       placeholder="Introduce el valor">
            </div>
        </div>
        <div class="footerFilter">
            <button class="btn btn-success" id="btnFilterApply" data-bind="click:FilterViewModel.applyClick">
                Aplicar
            </button>
            <button class="btn btn-link btn-sm" onclick="CloseFilter()">
                Cerrar
            </button>
        </div>
    </div>
</div>

