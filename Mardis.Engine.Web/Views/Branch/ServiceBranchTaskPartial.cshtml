<div id="divTasksBranch" class="modal fade" role="dialog">
    <div class="modal-dialog modal-lg modal-scrollable">
        <div class="modal-content">
            <div class="modal-header">
                <button type="button" class="close" data-dismiss="modal">&times;</button>
                <h4 class="modal-title">Tareas por Local y servicio</h4>
            </div>
            <div class="modal-body">

                <div class="table-responsive">
                    <table class="table table-striped table-hover">
                        <thead>
                            <tr>
                                <th>#</th>
                                <th>Código</th>
                                <th>Fecha de Inicio</th>
                                <th>Campaña</th>
                                <th>Descripción</th>
                                <th>Mercaderista</th>
                                <th>Supervisor</th>
                            </tr>
                        </thead>
                        <tbody data-bind="foreach:TaskServices">
                            <tr data-bind="attr:{id:'row'+Id}">
                                <td></td>
                                <td data-bind="text:Code"></td>
                                <td data-bind="text:moment(StartDate).format('DD/MM/YYYY')"></td>
                                <td data-bind="text:Campaign.Name"></td>
                                <td data-bind="text:Description"></td>
                                <td data-bind="text:Merchant.Profile.Name"></td>
                                <td data-bind="text:Campaign.Supervisor.Profile.Name"></td>
                            </tr>
                        </tbody>
                    </table>
                </div>

            </div>
            <div class="modal-footer">
                <button class="btn btn-default btn-sm" id="btnCancelar" data-dismiss="modal">OK</button>
            </div>
        </div>
    </div>
</div>