<div id="divEscogerLocal" class="modal fade" role="dialog">
    <div class="modal-dialog modal-lg modal-scrollable">
        <div class="modal-content">
            <div class="modal-header">
                <button type="button" class="close" data-dismiss="modal">&times;</button>

                <h4 class="modal-title">BUSCAR LOCAL</h4>
            </div>
            <div class="modal-body" style="max-height: calc(100vh - 210px); overflow-y: auto;">
                <div class="row">
                    <div class="col-sm-4">
                        <label for="selCountries" class="control-label">
                            País<span class="symbol required"></span>
                        </label>
                    </div>
                    <div class="col-sm-8">
                        <select id="selCountries" class="form-control input-sm"></select>
                    </div>
                </div>

                <div style="margin-top: 7px;"></div>

                <div class="row ">
                    <div class="col-sm-4">
                        <label for="selProvinces" class="control-label">
                            Provincia<span class="symbol required"></span>
                        </label>
                    </div>
                    <div class="col-sm-8">
                        <select id="selProvinces" class="form-control input-sm"></select>
                    </div>
                </div>

                <div style="margin-top: 7px;"></div>

                <div class="row">
                    <div class="col-sm-4">
                        <label for="selDistricts" class="control-label">
                            Cantón<span class="symbol required"></span>
                        </label>
                    </div>
                    <div class="col-sm-8">
                        <select id="selDistricts" class="form-control input-sm"></select>
                    </div>

                </div>

                <div style="margin-top: 7px;"></div>

                <div class="row">
                    <div class="col-sm-4">
                        <label for="dllDocumentType" class="control-label">
                            Tipo de Documento<span class="symbol required"></span>
                        </label>
                    </div>
                    <div class="col-sm-8">
                        <select id="dllDocumentType" class="form-control input-sm">
                            <option></option>
                            <option value="CI">Natural</option>
                            <option value="RUC">Jurídica</option>
                        </select>
                    </div>
                </div>

                <div style="margin-top: 7px;"></div>

                <div class="row">
                    <div class="col-sm-4">
                        <label for="txtIdentification" class="control-label">
                            CI / RUC<span class="symbol required"></span>
                        </label>
                    </div>
                    <div class="col-sm-8">
                        <input id="txtIdentification" class="form-control input-sm"
                               type="text" placeholder="Identificación" />
                    </div>
                </div>

                <div style="margin-top: 7px;"></div>

                <div class="row">
                    <div class="col-sm-4">
                        <label for="txtNameBranch" class="control-label">
                            Nombre del Local<span class="symbol required"></span>
                        </label>
                    </div>
                    <div class="col-sm-8">
                        <input id="txtNameBranch" class="form-control input-sm"
                               type="text" placeholder="Nombre del Local" />
                    </div>
                </div>

                <div style="margin-top: 7px;"></div>

                <div class="row">
                    <div class="col-sm-4">
                        <label for="txtOwner" class="control-label">
                            Propietario<span class="symbol required"></span>
                        </label>
                    </div>
                    <div class="col-sm-8">
                        <input id="txtOwner" class="form-control input-sm"
                               type="text" placeholder="Propietario" />
                    </div>
                </div>

                <div style="margin-top: 7px;"></div>

                <div class="row">
                    <div class="col-sm-4">
                        <label for="txtCode" class="control-label">
                            Código<span class="symbol required"></span>
                        </label>
                    </div>
                    <div class="col-sm-8">
                        <input id="txtCode" class="form-control input-sm"
                               type="text" placeholder="Código" />
                    </div>
                </div>

                <div class="table-responsive" id="divBranchesResult">
                    <table class="table table-striped table-hover">
                        <thead>
                            <tr>
                                <th>#</th>
                                <th>Código</th>
                                <th>Local</th>
                                <th>Propietario</th>
                            </tr>
                        </thead>
                        <tbody data-bind="foreach:BranchesResult">
                            <tr data-bind="attr:{id:'row'+Id}">
                                <td><input type="checkbox" data-bind="attr:{value:Id},checked:$parent.branchSelected" /></td>
                                <td data-bind="text:ExternalCode"></td>
                                <td data-bind="text:Name"></td>
                                <td data-bind="text:PersonOwner.Name"></td>
                            </tr>
                        </tbody>
                    </table>
                </div>

            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-primary" onclick="SearchBranches();">
                    Buscar
                </button>
                <button type="button" class="btn btn-primary" onclick="ValidateSearch();" >
                    OK
                </button>
                <button class="btn btn-link btn-sm" data-dismiss="modal">
                    Cerrar
                </button>
            </div>
        </div>
    </div>
</div>