@model AccountRegisterViewModel

@{
    ViewData["Title"] = "Cuentas";
    ViewData["Description"] = "Registro";
}

@section buttons{}
@section filters{}

<form asp-action="Register" asp-controller="EngineAccount" method="POST">
    <input type="hidden" asp-for="Id"/>
    <div class="row">
        <div class="col-sm-2">
            <label asp-for="Code" class="control-label"></label>
        </div>
        <div class="col-sm-4">
            <input asp-for="Code" class="form-control"/>
            <span asp-validation-for="Code" class="text-danger"></span>
        </div>

        <div class="col-sm-2">
            <label asp-for="Name" class="control-label"></label>
        </div>
        <div class="col-sm-4">
            <input asp-for="Name" class="form-control"/>
            <span asp-validation-for="Name" class="text-danger"></span>
        </div>
    </div>
    
    <div style="margin-top: 7px;"></div>

    <div class="row">
        <div class="col-sm-2">
            <label asp-for="StatusRegister" class="control-label"></label>
        </div>
        <div class="col-sm-4">
            <select asp-for="StatusRegister" class="form-control">
                <option>--Seleccionar--</option>
                <option value="A">Activo</option>
                <option value="D">Inactivo</option>
            </select>
            <span asp-validation-for="StatusRegister" class="text-danger"></span>
        </div>
    </div>

    <div style="margin-top: 7px;"></div>

    <div class="center">
        <button type="submit" class="btn btn-primary">Aceptar</button>
        <a href="@Url.Action("Index","EngineAccount")" class="btn btn-link">Salir</a>
    </div>
</form>

@section scripts{}
